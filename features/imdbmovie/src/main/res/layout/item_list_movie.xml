<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data>
        <variable
            name="movie"
            type="id.nz.app.mvppattern.data.model.Movie"
            />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="@dimen/item_movie_width"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:foreground="?android:attr/selectableItemBackground"
        tools:background="#000"
        tools:ignore="UnusedAttribute">
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            >
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/item_image"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:scaleType="centerCrop"
                app:fromUrl="@{String.format(@string/movie_image_url,movie.image)}"
                tools:src="@tools:sample/avatars"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_logo_imdb"
                android:scaleType="centerInside"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:alpha="0.85"
                tools:ignore="ContentDescription" />
        </com.google.android.material.card.MaterialCardView>
        <TextView
            android:id="@+id/text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:lines="1"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="10dp"
            app:textOrGone="@{movie.title}"
            tools:text="@tools:sample/full_names"
            />
        <androidx.appcompat.widget.AppCompatRatingBar
            style="?android:attr/ratingBarStyleSmall"
            android:id="@+id/rating_movies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize=".1"
            android:layout_marginTop="10dp"
            android:theme="@style/RatingBar"
            android:rating="@{movie.rating}"
            tools:rating="3.5"
            />
    </LinearLayout>
</layout>